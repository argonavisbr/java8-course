package br.com.argonavis.java.threads;

public class Paralelo implements Runnable {
    public int contagem;
    
    private int espera;
    private String tipo;
    
    public Paralelo(String tipo, int espera) {
    	this.tipo = tipo;
    	this.espera = espera;
    }
    public void run() {
        while (contagem < 60) {
            System.out.println(++contagem + " carneirinhos " + tipo + "...");
            try {
				Thread.sleep(espera);
			} catch (InterruptedException e) {} // espera 1 segundo
        }
    }
}

